<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <div class="container">
      <div class="header_nav">
        <div class="header_logo">
          <a href=""><h3>Blogging platform</h3></a>
        </div>
     
        <div class="search_bar">
          
         
          <div class="header_btn">
            <a href="http://localhost:2004/login"> <button class="button">Log In</i></button></a>
           <a href="http://localhost:2004/register"><button class="button">sign in</i></button></a> 
          </div>
        </div>
        
      </div>
    </div>
  </header>
  <section>
    <div class="container">
      <div class="hero_section">
        <h2>Latest posts</h2>
               <ul class="article_ul">
                
              <% if(locals.post) {%>

                <% post.forEach(post => { %>
                  
                  <li class="li_Hover">
                    <a href="" class="postId">
                    <span class="date"><%=post.createdAt.toDateString() %></span>
                  <span class="title"> <%= post.title %></span> <br>
                  <span class="content_post"> <%= post.content %></span> 

                    <div class="post_header">
                   
                      <span class="show_user"> <span class="user_profile"><i class="fa-solid fa-user"></i></span><h2><%= post.author.username %></h2> </span> 
                      
                      
                     </div>
                     <!-- <button onclick="clicked('<%= post._id %>')">view</button> -->
                    </a>
                  </li>
               
                <% }) %>

                <% } %>
       
               </ul>
    </div>
    </div>
  </section>
  
</body>
</html>